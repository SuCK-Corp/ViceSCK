<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.bboyc.vicenews.MainActivity"
    android:background="@drawable/black">

    <android.support.v7.widget.Toolbar
        android:layout_height="64dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        />

    <TextView
        android:text="Latest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:background="@color/cardview_shadow_start_color"
        android:textColor="@android:color/background_light"
        app:layout_constraintRight_toLeftOf="@+id/fab1"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/fab1"
        app:layout_constraintTop_toTopOf="@+id/fab1" />

    <include layout="@layout/content_main"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintRight_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/favorites"
        app:backgroundTint="@android:color/holo_red_light"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/fab1"
        android:layout_marginBottom="16dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/latest"
        app:backgroundTint="@android:color/holo_green_light"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/fab4"
        app:layout_constraintRight_toRightOf="@+id/fab2"
        android:layout_marginBottom="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/video"
        app:backgroundTint="@android:color/holo_purple"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/fab4"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/fab"
        android:layout_marginBottom="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/fire"
        app:backgroundTint="@android:color/holo_orange_dark"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/fab3"
        app:layout_constraintRight_toRightOf="@+id/fab1"
        android:layout_marginBottom="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/cat"
        app:backgroundTint="@android:color/holo_blue_light"
        app:elevation="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="Categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:background="@color/cardview_shadow_start_color"
        android:textColor="@android:color/background_light"
        tools:backgroundTint="?android:attr/textColorHint"
        app:layout_constraintTop_toTopOf="@+id/fab"
        app:layout_constraintBottom_toBottomOf="@+id/fab"
        app:layout_constraintRight_toLeftOf="@+id/fab"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:text="Videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:background="@color/cardview_shadow_start_color"
        android:textColor="@android:color/background_light"
        app:layout_constraintRight_toLeftOf="@+id/fab3"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/fab3"
        app:layout_constraintBottom_toBottomOf="@+id/fab3" />

    <TextView
        android:text="Popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:background="@color/cardview_shadow_start_color"
        android:textColor="@android:color/background_light"
        app:layout_constraintTop_toTopOf="@+id/fab4"
        app:layout_constraintBottom_toBottomOf="@+id/fab4"
        app:layout_constraintRight_toLeftOf="@+id/fab4"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:text="Favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:background="@color/cardview_shadow_start_color"
        android:selectAllOnFocus="false"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        app:layout_constraintRight_toLeftOf="@+id/fab2"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/fab2"
        app:layout_constraintTop_toTopOf="@+id/fab2" />


</android.support.constraint.ConstraintLayout>
